@startuml name
' -------------------------------
' Configuración de colores y estilos
' -------------------------------
skinparam activity {
  BackgroundColor<<Si>> LightGreen
  BackgroundColor<<No>> LightCoral
  BorderColor Black
  FontColor Black
}

' -------------------------------
' Diagrama de flujo con bucle
' -------------------------------
start
:Inicio;
if (Condición?) then (Sí)
  :Acción positiva;
else (No)
  :Acción negativa;
  --> X;  ' Nodo invisible
endif
X --> Condición;  Línea de regreso al bucle
stop
@enduml

@enduml
